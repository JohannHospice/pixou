{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "npmClient": "yarn",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"]
    },
    "web#build": {
      "dependsOn": ["$REACT_APP_FIREBASE_CONFIG", "$NODE_ENV"]
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"]
    },
    "deploy": {
      "dependsOn": ["lint", "build"]
    },
    "deploy:ci": {
      "dependsOn": ["lint", "build", "$FIREBASE_TOKEN", "$FIREBASE_PROJECT_ID"]
    },
    "dev": {
      "cache": false
    }
  }
}
