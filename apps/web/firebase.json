{
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 3001,
      "host": "0.0.0.0",
      "rewrites": [
        {
          "source": "**",
          "destination": "http://localhost:3000"
        }
      ]
    },
    "ui": {
      "enabled": false
    }
  }
}
